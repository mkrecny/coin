extends layout

block content
  .container
    .row
      .col-xs-12
        h3 #{arbs.market} Opportunites
    .row
      .col-xs-12
        table.table.table-hover.table-striped
          thead
            tr
              th Buy Ex
              th Sell Ex
              th Buy Price
              th Sell Price
              th Quantity
              th Cost
              th Revenue
              th Profit
          tbody
            for arb in arbs.arbs
              include arb
